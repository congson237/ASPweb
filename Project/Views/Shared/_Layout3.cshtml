    <style>
        .navbar {
            background-color: #ffffff; /* Màu nền của navbar (trắng) */
            padding: 10px; /* Khoảng cách trong navbar */
        }

        .nav-menu {
            list-style-type: none; /* Bỏ dấu đầu dòng */
            padding: 0; /* Bỏ khoảng cách */
            margin: 0; /* Bỏ khoảng cách */
            display: flex; /* Hiển thị menu theo hàng ngang */
        }

        .nav-item {
            position: relative; /* Để định vị dropdown */
        }

        .nav-link {
            color: black; /* Màu chữ (đen) */
            padding: 10px 20px; /* Khoảng cách trong liên kết */
            text-decoration: none; /* Bỏ gạch chân */
        }

            .nav-link:hover {
                background-color: #f0f0f0; /* Màu nền khi hover (nhạt hơn) */
            }

        .dropdown-menu {
            display: none; /* Ẩn dropdown menu */
            position: absolute; /* Định vị tuyệt đối */
            background-color: white; /* Màu nền của dropdown */
            min-width: 150px; /* Độ rộng tối thiểu */
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2); /* Đổ bóng */
            z-index: 1; /* Đặt độ ưu tiên hiển thị */
        }

            .dropdown-menu li {
                list-style-type: none; /* Bỏ dấu đầu dòng */
            }

            .dropdown-menu a {
                color: black; /* Màu chữ của dropdown */
                padding: 10px 15px; /* Khoảng cách trong liên kết */
                text-decoration: none; /* Bỏ gạch chân */
                display: block; /* Hiển thị dưới dạng khối */
            }

                .dropdown-menu a:hover {
                    background-color: #f1f1f1; /* Màu nền khi hover */
                }

        /* Hiện dropdown khi di chuột vào */
        .nav-item:hover .dropdown-menu {
            display: block; /* Hiện dropdown */
        }
    </style>
</head>
